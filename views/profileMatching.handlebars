<div class="row">
    <div class="row">
        <div class="col-md-6">
            <div class="d-flex align-items-center mb-3">
                <h2>User A</h2>
                <select id="left-service-dropdown" class="form-control mr-3">
                    <option value="Netflix">Netflix</option>
                    <option value="AmazonPrime">Amazon Prime Video</option>
                    <option value="DisneyPlus">Disney+</option>
                    <option value="HBO">HBO</option>
                    <option value="ParamountPlus">Paramount+</option>
                </select>
                <form class="ml-auto">
                    <button type="submit" class="btn btn-primary">ADD SUBSCRIPTION</button>
                </form>
            </div>

            <p>{{sharingData.message}}</p>

            <h3>The services you are sharing:</h3>
            <div>
                {{#each data.[0]}}
                <h5> {{this.streamingService.stream_name}} </h5>
                {{/each}}
            </div>

            <h3>You are now using:</h3>
            <div>
                {{#each data.[1]}}
                <h5>{{this.streamingService.stream_name}}</h5>
                {{/each}}
            </div>
        </div>

        <div class="col-md-6">
            <div class="d-flex align-items-center mb-3">
                <h3>User B</h3>
                <select id="right-service-dropdown" class="form-control mr-3">
                    <option value="Netflix">Netflix</option>
                    <option value="AmazonPrime">Amazon Prime Video</option>
                    <option value="DisneyPlus">Disney+</option>
                    <option value="HBO">HBO</option>
                    <option value="ParamountPlus">Paramount+</option>
                </select>


            </div>

            <div class="mb-3 mt-5 text-center">
                <h3><label for="application-login">User B's login credentials are:</label></h3>
                <input id="application-login" type="text" placeholder="Application Login" class="form-control">
            </div>
            <div class="mb-3 text-center">
                <input id="application-password" type="password" placeholder="Application Password"
                    class="form-control">
            </div>
        </div>
    </div>
</div>