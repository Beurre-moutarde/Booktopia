<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card p-3">
                <div class="d-flex align-items-center mb-3">
                    <h2>User A</h2>
                        <button type="submit" class="btn btn-primary ms-3">ADD SUBSCRIPTION</button>
                    </form>
                </div>
                <p>{{sharingData.message}}</p>
                <h3>The services you are sharing:</h3>
                <div>
                    {{#if data.[0].length}}
                    <ul>
                        {{#each data.[0]}}
                        <li>{{this.streamingService.stream_name}}</li>
                        {{/each}}
                    </ul>
                    {{else}}
                    <p>You are not sharing any services at the moment.</p>
                    {{/if}}
                </div>
                <h3>You are now using:</h3>
                <div>
                    {{#if data.[1].length}}
                    <ul>
                        {{#each data.[1]}}
                        <li>{{this.streamingService.stream_name}}</li>
                        {{/each}}
                    </ul>
                    {{else}}
                    <p>You are not using any services at the moment.</p>
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card p-3">
                <div class="d-flex align-items-center mb-3">
                    <h3>User B</h3>
                    <select id="right-service-dropdown" class="form-select ms-auto">
                        <option value="Netflix">Netflix</option>
                        <option value="AmazonPrime">Amazon Prime Video</option>
                        <option value="DisneyPlus">Disney+</option>
                        <option value="HBO">HBO</option>
                        <option value="ParamountPlus">Paramount+</option>
                    </select>
                </div>
                <div class="mb-3 text-center">
                    <h3><label for="application-login" class="form-label">User B's login credentials are:</label></h3>
                    <input id="application-login" type="text" placeholder="Application Login" class="form-control">
                </div>
                <div class="mb-3 text-center">
                    <input id="application-password" type="password" placeholder="Application Password"
                        class="form-control">
                </div>
            </div>
        </div>
    </div>
</div>